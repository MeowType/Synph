{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "node",
        "outDir": "test/tsout",
        "strict": true,
        "jsx": "preserve",
        "importHelpers": true,
        "sourceMap": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
    },
    "paths": {
        "@/*": [
            "src/*"
        ]
    },
    "include": [
        "./src/**/*.ts",
        "./src/**/*.vue",
        "./src/**/*.tsx",
    ],
    "exclude": [
        "tsout",
        "node_modules"
    ]
}